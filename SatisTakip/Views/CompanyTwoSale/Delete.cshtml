@model SatisTakip.Models.CompanyTwoSale

<h3 class="text-center" style="color:red">Silmek istediğinize emin misiniz?</h3>
<div class="container">
    <hr />
    <div class="row">
        <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Lastname)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Lastname)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.LineType)
                </dt>

                <dd>
                    @{
                        if (Model.LineType)
                        {
                            ViewBag.secim = "Faturalı";
                        }
                        else
                        {
                            ViewBag.secim = "Faturasız";
                        }
                    }
                    @ViewBag.secim
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CustomerType)
                </dt>

                <dd>
                    @{
                        if (Model.CustomerType)
                        {
                            ViewBag.secim = "Yeni";
                        }
                        else
                        {
                            ViewBag.secim = "Taşıma";
                        }
                    }
                    @ViewBag.secim
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ActivationDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ActivationDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ContactNumber)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Note)
                </dt>

                <dd>
                    "@Html.DisplayTextFor(model => model.Note)"
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CustomerState)
                </dt>

                <dd>
                    @{if (Model.CustomerState)
                    {
                        ViewBag.secim = "Aktif";
                    }
                    else
                    {
                        ViewBag.secim = "Pasif";
                    }
                    }
                    @ViewBag.secim
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center">
                    <input type="submit" value="Sil" class="btn btn-default" /> |
                    @Html.ActionLink("Listeye geri dön", "Index")
                </div>
            }

        </div>
    </div>
</div>


