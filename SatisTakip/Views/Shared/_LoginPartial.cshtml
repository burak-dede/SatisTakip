@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

        <li>
            @Html.ActionLink("Hesabım", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav navbar-nav navbar-right" ,style="margin:0"}))
