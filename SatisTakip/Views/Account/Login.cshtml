@model SatisTakip.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.Title = "Giriş";
}

<style type="text/css">
    body {
        background-image: url("/Content/Images/aracinizgozunuzonunde.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        padding-top: 0;
        padding-bottom: 0;
        min-width: 0;
    }
</style>
    <div class="row" id="pwd-container">
        <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" style="background-color: rgba(255, 255, 255, 0.87); height: 100vh; display: table;">
            <section class="login-form">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    <img src="/Content/Images/logo.png" class="img-responsive" style="margin: auto; padding-bottom:30px" />

                    @Html.ValidationSummary()


                    <div class="form-group">
                        @Html.TextBoxFor(m => m.UserName, new { placeholder = "Kullanıcı Adı", @class = "form-control input-lg" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Şifre", @class = "form-control input-lg" })
                    </div>
                    <div class="form-group">
                        <button type="submit" name="go" class="btn btn-lg btn-primary btn-block" value="Register" style="    max-width: 280px;margin: auto;">
                            Giriş
                        </button>
                    </div>

                    <div class="form-group text-center">
                        <a href="/Account/Login">Şifremi Unuttum</a>
                    </div>
                }
            </section>
        </div>

    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
    </script>
}
