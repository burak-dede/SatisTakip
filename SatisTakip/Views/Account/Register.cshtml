@model SatisTakip.Models.RegisterViewModel


@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.Title = "Yeni Kullanıcı";
}

<style type="text/css">
    body {
        background-image: url("https://images.unsplash.com/photo-1606857521015-7f9fcf423740?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2340&q=80");
        background-repeat: no-repeat;
        background-size: cover;
        padding-top: 0;
        padding-bottom: 0;
        min-width: 0;
    }
</style>

    <div class="row" id="pwd-container">
        <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" style="background-color: rgba(255, 255, 255, 0.87); height: 100vh; display: table;">
            <section class="login-form">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <img src="/Content/Images/logo.png" class="img-responsive" style="margin: auto; padding-bottom:30px" />

                    @Html.ValidationSummary()


                    <div class="form-group">
                        @Html.TextBoxFor(m => m.UserName, new { placeholder = "Kullanıcı Adı", @class = "form-control input-lg" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control input-lg" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Şifre", @class = "form-control input-lg" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Şifre Tekrar", @class = "form-control input-lg" })
                    </div>
                    <div class="form-group">
                        <button type="submit" name="go" class="btn btn-lg btn-primary btn-block" value="Register" style="    max-width: 280px;margin: auto;">
                            Kayıt
                        </button>
                    </div>

                    <div class="form-group text-center">
                        <a href="/Account/Login">Giriş Yap</a> | <a href="/Account/Login">Şifremi Unuttum</a>
                    </div>
                }
            </section>
        </div>


    </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
    </script>
}
