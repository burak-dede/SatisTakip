@using SatisTakip.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Hesabım";
}

<style>
    #category-logo-div {
        display: none;
    }
    .body-content {
        position: absolute;
    }
</style>
<div class="text-center">

    <h2>@ViewBag.Title</h2>
    <p><strong>@User.Identity.GetUserName()</strong> olarak giriş yaptınız.</p>
</div>
<div class="row text-center">
    <div class="col-md-4">
        <div class="list-group list-group-horizontal">
            <a href="@Url.Action("Register", "Account")" class="list-group-item list-group-item-action" style="color: #fff;background-color: #5cb85c;border-color: #4cae4c; width:50%">Yeni Kullanıcı Ekle</a>
            <a href="@Url.Action("Manage", "Account")" class="list-group-item list-group-item-action" style="color: #fff; background-color: #ff4646; border-color: #ff4646; width: 50%; ">Kullanıcı Sil</a>
        </div>

        <div class="list-group">
            <a href="@Url.Action("Manage", "Account", new { cat = "passchange" })" class="list-group-item list-group-item-action active">Şifre Değiştir</a>
        </div>
    </div>
    <div class="col-md-8">
        <div class="col-md-6 col-md-offset-3">

            @if (ViewBag.registerState != true)
            {
                if (ViewBag.category == "passchange")
            {
                
                <p class="text-success">@ViewBag.StatusMessage</p>

                if (ViewBag.HasLocalPassword)
                {
                    @Html.Partial("_ChangePasswordPartial")
                }
            }
            }
            else
            {
                <h3 class="alert-success">Yeni kullanıcı kayıt işlemi başarılı.</h3>
            }
            
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
