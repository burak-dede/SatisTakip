@model SatisTakip.Models.ArventoSale


<div class="container">

    <h2 style="text-align:center">DETAY</h2>
    <hr />
    <div class="row">
        <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CompanyName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Sales)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Sales)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DateofSale)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateofSale)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EndOfContractDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EndOfContractDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsMobileDataOwn)
                </dt>

                <dd>
                    @{
                        if (Model.IsMobileDataOwn)
                        {
                            ViewBag.secim = "Evet";
                        }
                        else
                        {
                            ViewBag.secim = "Hayır";
                        }
                    }
                    @ViewBag.secim
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.MobileDate)
                </dt>

                <dd>
                    @{
                        if (Model.IsMobileDataOwn)
                        {
                            ViewBag.secim = Model.MobileDate;
                        }
                        else
                        {
                            ViewBag.secim = "---";
                        }
                    }
                    @ViewBag.secim
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.RemindingType)
                </dt>

                <dd>
                    @{
                        if (Model.RemindingType)
                        {
                            ViewBag.secim = "Önce";
                        }
                        else
                        {
                            ViewBag.secim = "Zamanında";
                        }
                    }
                    @ViewBag.secim
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.RemindingTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RemindingTime)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CustomerState)
                </dt>

                <dd>
                    @{if (Model.CustomerState)
                    {
                        ViewBag.secim = "Aktif";
                    }
                    else
                    {
                        ViewBag.secim = "Pasif";
                    }
                    }
                    @ViewBag.secim
                </dd>
                <dd>
                    <p>
                        @Html.ActionLink("Düzenle", "Edit", new { id = Model.Id }) |
                        @Html.ActionLink("Listeye Geri Dön", "Index")
                    </p>
                </dd>
            </dl>
        </div>
    </div>
</div>
